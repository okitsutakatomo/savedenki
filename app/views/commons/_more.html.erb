<%- if !@friends.blank? %>
  <!% フォロー一覧 %>
  <% if @friends.next_cursor != 0 %>
    <%= link_to_remote t("commons.more.more_text"), :url  => {:page => @friends.next_cursor } %>
  <% end %>
<% else %>
  <!% 検索一覧 %>
  <% if @users.size >= 20 %>
    <%= link_to_remote t("commons.more.more_text"), :url  => {:page => params[:page].to_i + 1, :q=> params[:q] } %>
  <% end %>
<%- end -%>

